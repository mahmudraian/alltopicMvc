@model alltopicMvc.Models.Category

@{
    ViewBag.Title = "Index";
}

<h2>Create Category</h2>

@using (Html.BeginForm("InsertCategory", "Category", FormMethod.Post))
{

    @Html.AntiForgeryToken()

    <div>
        <label for="Name">Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "Name" })



    </div>

    <div>
        <label for="Title">Title</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @id = "Title" })

    </div>

    <div>
        <label for="description"> Description</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @id = "Description" })

    </div>

    <div>
        <label for="Image">Image</label>
        @Html.TextBoxFor(m => m.Image, new { @class = "form-control", @id = "Image" })
    </div>


    <input type="submit" class="btn btn-primary" value="Submit" />
}





